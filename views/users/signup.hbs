<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4>Registro de cuenta</h4>
            </div>
            <div class="card-body">
                <form action="/usuarios/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Ingrese su nombre"
                            value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Ingrese su email"
                            value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Contraseña"
                            value="{{password}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirmPassword"
                            placeholder="Ingrese nuevamente su contraseña" value="{{confirmPassword}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Resgistrarse</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>